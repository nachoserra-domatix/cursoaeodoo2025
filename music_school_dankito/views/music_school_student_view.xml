<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="music_school_student_view_form" model="ir.ui.view">
        <field name="name">music.school.student.view.form</field>
        <field name="model">music.school.student</field>
        <field name="arch" type="xml">
            <form string="Student">
                <header>
                    <button string="Generate code" name="generate_code" type="object" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <field name="active" />
                        <field name="reference" />
                        <field name="name" />
                        <field name="email" />
                        <field name="phone" />
                        <field name="birthday" />
                        <field name="age" />
                        <field name="user_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="music_school_student_view_list" model="ir.ui.view">
        <field name="name">music.school.student.view.list</field>
        <field name="model">music.school.student</field>
        <field name="arch" type="xml">
            <list string="Students list">
                <field name="active" optional="show"/>
                <field name="reference" optional="show"/>
                <field name="name" optional="show"/>
                <field name="email" optional="show"/>
                <field name="phone" optional="show"/>
                <field name="birthday" optional="show" />
                <field name="user_id" optional="show"/>

            </list>
        </field>
    </record>

</odoo>
