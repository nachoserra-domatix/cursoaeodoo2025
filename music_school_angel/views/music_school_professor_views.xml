<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="music_school_professor_action" model="ir.actions.act_window">
    <field name="name">Professors</field>
    <field name="res_model">music.school.professor</field>
    <field name="view_mode">list,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Create your first professor
        </p>
    </field>
</record>


<record id="music_school_professor_view_list" model="ir.ui.view">
    <field name="name">music.school.professor.view.list</field>
    <field name="model">music.school.professor</field>
    <field name="arch" type="xml">
        <list multi_edit="1" string="Professors">
            <field name="name"/>
            <field name="email" optional="show"/>
            <field name="phone" optional="show"/>
            <field name="level"/>        
        </list>
    </field>
</record>


<record id="music_school_professor_view_form" model="ir.ui.view">
    <field name="name">music.school.professor.view.form</field>
    <field name="model">music.school.professor</field>
    <field name="arch" type="xml">
        <form string="Professors">
            <header>
                <!--button string="Generate reference" name="generate_reference" type="object" class="oe_highlight"/-->
            </header>
            <sheet>
                <div class="oe_title">
                    <h1>
                        <field name="name" placeholder="Professor"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="email"/>
                        <field name="phone"/>
                        <field name="level"/>
                    </group>                    
                </group>
            </sheet>
        </form>
    </field>
</record>

</odoo>
